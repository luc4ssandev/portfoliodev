---
import Arrow from "../components/Arrow.astro";
import Menu from "../components/icon/Menu.astro";
---

<!-- shadow-violet-800/30 shadow-lg-->
<header class="flex justify-center w-full font-extralight text-black text-md fixed z-50 bg-[#FEFEFF]">
    <div class="w-full md:w-[88%] flex items-center justify-between border-b border-black/10 py-2 px-2">
        <!-- Menu Toggle for Mobile -->
        <img src="/1.png" alt="logo" class="size-12 lg:hidden">
        <div class="menu-toggle flex lg:hidden" id="menu-toggle">
            <Menu />
        </div>
        <nav class="w-full lg:flex justify-between hidden items-start md:items-center" id="menu">
            <img src="/1.png" alt="logo" class="size-12">
            <ul class="flex gap-4">
                <li class="pl-4"><a href="#home">Inicio</a></li>
                <li class="pl-4"><a href="#about-me">Sobre m√≠</a></li>
                <li class="pl-4"><a href="#proyects">Proyectos</a></li>
                <li class="border-[1.5px] py-[0.1rem] px-4 border-[#EC6235] rounded-full flex items-center justify-center">
                    <a href="mailto:lucaas.sanchez16@gmail.com?subject=Contacto%20desde%20Portfolio%20-%20Reclutador%20IT&body=Hola%20Lucas,%0D%0A%0D%0AHe%20visto%20tu%20portfolio%20y%20estoy%20interesado%20en%20conversar%20sobre%20posibilidades%20laborales.%20%C2%BFPodr%C3%ADas%20ponerte%20en%20contacto%20conmigo%20para%20coordinar%20una%20reuni%C3%B3n?%0D%0A%0D%0AMuchas%20gracias,%0D%0A%0D%0A[Tu%20nombre%20y%20cargo]" class="flex items-center gap-2">
                        Contactar 
                        <Arrow />
                    </a>
                </li></ul>
        </nav>
    </div>
</header>

<style>
    a:hover, a:focus {
        color: #8319FB;
    }

    /* Mobile menu styles */
    @media (max-width: 1024px) {
        .menu-toggle {
            display: block;
            font-size: 24px;
            cursor: pointer;
        }

        #menu {
            display: none;
            flex-direction: column;
            background-color: #FEFEFF;
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            border-top: 1px solid rgba(0, 0, 0, 0.1);
        }

        #menu.active {
            display: flex;
        }

        #menu ul {
            flex-direction: column;
            gap: 1rem;
            padding: 1rem;
        }

        #menu img {
            display: none;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const menuToggle = document.getElementById('menu-toggle');
        const menu = document.getElementById('menu');

        menuToggle.addEventListener('click', function() {
            menu.classList.toggle('active');
        });
    });
</script>
